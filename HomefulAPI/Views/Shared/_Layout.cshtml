<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/materialdesigncss")
    @Styles.Render("~/bundles/materialicon")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="mdl-layout mdl-js-layout">
        <header class="mdl-layout__header mdl-layout__header--scroll">
            <div class="mdl-layout__header-row">
                <!-- Title -->
                <span class="mdl-layout-title">Title</span>
                <!-- Add spacer, to align navigation to the right -->
                <div class="mdl-layout-spacer"></div>
                <!-- Navigation -->
                <nav class="mdl-navigation">
                </nav>
            </div>
        </header>
        <div class="mdl-layout__drawer">
            <span class="mdl-layout-title">Title</span>
            <nav class="mdl-navigation">

                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "mdl-navigation__link" })
                @Html.ActionLink("Locations", "Index", "Locations", new { area = "" }, new { @class = "mdl-navigation__link" })
            </nav>
        </div>
    </div>

    <main class="mdl-layout__content">
        <div class="page-content">
            @RenderBody()
        </div>
    </main>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/materialdesignjs")

    @RenderSection("scripts", required: false)
</body>
</html>
